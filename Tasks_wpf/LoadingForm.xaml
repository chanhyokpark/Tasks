<Window x:Class="Tasks_wpf.LoadingForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tasks_wpf"
        mc:Ignorable="d"
        Title="LoadingForm" Height="450" Width="800"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Closing="Window_Closing">
    <ui:SimpleStackPanel Margin="12" Spacing="24" >
        <TextBlock Text="시간표 제작 중..." Style="{StaticResource HeaderTextBlockStyle}" />
        <ListBox x:Name="Status" Height="330" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
    </ui:SimpleStackPanel>
</Window>
